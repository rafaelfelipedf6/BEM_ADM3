<h1>Listing workers</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Nascimento</th>
      <th>Cpf</th>
      <th>Entrada</th>
      <th>Salario</th>
      <th>Cep</th>
      <th>Estado</th>
      <th>Endereco</th>
      <th>Num</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.nome %></td>
        <td><%= worker.nascimento %></td>
        <td><%= worker.cpf %></td>
        <td><%= worker.entrada %></td>
        <td><%= worker.salario %></td>
        <td><%= worker.cep %></td>
        <td><%= worker.estado %></td>
        <td><%= worker.endereco %></td>
        <td><%= worker.num %></td>
        <td><%= link_to 'Show', worker %></td>
        <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
        <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

