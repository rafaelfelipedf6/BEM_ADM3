<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Categoria</th>
      <th>Subcategoria</th>
      <th>Preco</th>
      <th>Peso</th>
      <th>Quantidade</th>
      <th>Entrada</th>
      <th>Validade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.nome %></td>
        <td><%= product.categoria %></td>
        <td><%= product.subcategoria %></td>
        <td><%= product.preco %></td>
        <td><%= product.peso %></td>
        <td><%= product.quantidade %></td>
        <td><%= product.entrada %></td>
        <td><%= product.validade %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

